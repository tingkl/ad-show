{
    "name": "AD Show",
    "version": "1.0",
    "manifest_version": 2,
    "icons": {
        "128": "images/icon.png"
    },
    "permissions": ["tabs",
        "activeTab",
        "http://*.baidu.com/*",
        "http://lego-dev.baidu.com/",
        "http://localhost/"],
    "description": "Auto generate AD-Show site.",
    "web_accessible_resources": [
        "js/hack.js"
    ],
    "background": {
        "scripts": [
            "js/bg.js"
        ]
    },
    "page_action": {
        "default_icon": "images/icon.png",
        "default_title": "AD Show",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": [
            "http://www.baidu.com/*"
        ],
        "js": [
            "lib/jquery.js",
            "js/grab.js"
        ]
    }]
}